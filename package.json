{
  "name": "phantom-metal-taste",
  "version": "0.1.0",
  "description": "Multi-model database architecture for measuring the gap between corporate intentions and outcomes",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "build:wasm": "cd src/core && cargo build --target wasm32-unknown-unknown --release",
    "test": "bun test",
    "test:integration": "bun test --preload ./tests/setup.ts",
    "typecheck": "tsc --noEmit",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d"
  },
  "dependencies": {
    "arangojs": "^8.8.1",
    "sparql-http-client": "^3.0.0",
    "zod": "^3.22.4",
    "hono": "^3.11.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  }
}
